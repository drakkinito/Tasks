<div class="modal" id="ModalTask">
    <div class="modal-dialog modal-">
        <div class="modal-content">
            <form asp-antiforgery="true" asp-action="Create" asp-controller="Home" method="post">
                <div class="modal-header">
                    <h5 class="card-title">New task</h5>
                </div>
                <div class="modal-body">
                    <div class="form-floating mb-3">
                        <input name="Title" type="text" class="form-control" id="floatingInput" placeholder="Enter title">
                        <label for="floatingInput">Enter title</label>
                    </div>
                    <div class="form-floating">
                        <textarea name="Describe" class="form-control" placeholder="Describe your task" id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Describe your task</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-outline-primary" data-bs-dismiss="modal">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>