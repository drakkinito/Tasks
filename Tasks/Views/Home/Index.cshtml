@model List<Tasks.Models.TaskModel>;

@{
    ViewData["Title"] = "Index";
    ViewData["IndexActive"] = "active";
}
<div class="row col-sm-8 w-75 ms-sm-2 mb-sm-5">
    @foreach (var task in Model)
    {
        <div class="col-sm-3 @(task.Id > 4 ? " pt-3" : "pt-4" )">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@task.Title</h5>
                    <p class="card-text">@task.Describe</p>
                </div>
            </div>
        </div>
    }
</div>
